@model AuctionLibrary.Models.ContactInfo

@{
    ViewBag.Title = "Log ind";
}

<h1>Auktionshuset for ædelmetaller</h1>
<hr />

<div>
    @using (Html.BeginForm())
    {
        <h2>Udfyld kontaktoplysninger</h2>
        <br />
        @Html.LabelFor(model => model.Name)
        <br />
        @Html.EditorFor(model => model.Name)
        <span style="color:red;">
            @Html.ValidationMessageFor(model => model.Name)
            @Html.DisplayFor(model => model.LoginNameErrorMsg)
        </span>
        <br />
        <br />
        @Html.LabelFor(model => model.Number)
        <br />
        @Html.EditorFor(model => model.Number)
        <span style="color:red;">
            @Html.ValidationMessageFor(model => model.Number)
            @Html.DisplayFor(model => model.LoginNumberErrorMsg)
        </span>
        <br />
        <br />
        @Html.LabelFor(model => model.Email)
        <br />
        @Html.EditorFor(model => model.Email)
        <span style="color:red;">
            @Html.ValidationMessageFor(model => model.Email)
            @Html.DisplayFor(model => model.LoginEmailErrorMsg)
        </span>
        <br />
        <br />
        <input type="submit" value="Log ind" />
        <input type="reset" value="Ryd" />
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
